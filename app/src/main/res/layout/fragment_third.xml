<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.thirdFragment"
                                                   android:id="@+id/frameLayout" android:background="@color/background">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center" android:layout_marginTop="30dp">
            <ImageView
                    android:src="@drawable/flat"
                    android:layout_width="120dp"
                    android:layout_height="120dp" android:id="@+id/imageView4" android:layout_marginBottom="30dp"
                    android:background="@drawable/backlogo" android:padding="10dp"/>
            <TextView
                    android:text="Your queue number is:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:id="@+id/textView5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            <TextView
                    android:text="#"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="35dp"
                    android:gravity="center"
                    android:id="@+id/queueNumber"
                    android:textSize="24sp"
                    android:textAllCaps="true" android:fontFamily="@font/nunitosemibold" android:textColor="#FFFFFF"
                    android:background="@drawable/circletext" android:textStyle="bold"/>
            <TextView
                    android:text="Please go to window number:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:id="@+id/textView7"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
            />
            <TextView
                    android:text="#"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="55dp"
                    android:gravity="center"
                    android:id="@+id/queueNumber2"
                    android:textSize="24sp"
                    android:textAllCaps="true" android:fontFamily="@font/nunitosemibold" android:textColor="#FFFFFF"
                    android:background="@drawable/circletext" android:textStyle="bold"/>
            <Button
                    android:text="@android:string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnCancel"
                    app:backgroundTint="@color/colorAccent" android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>