<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.secondFragment" android:id="@+id/constraintLayout"
>
    <TextView
            android:text="Selected Transactions"
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/selectTransac"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp" android:textSize="24sp"
            android:textColor="#000000"/>
    <TextView
            android:text="Gather all the requirements before hitting that confirm button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView3"
            android:textSize="24sp" android:textColor="#000000" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="280dp" android:textStyle="italic" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="305dp"
            android:layout_height="0dp"
            app:columnCount="2"
            app:rowCount="1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1">
            <Button
                    android:text="@android:string/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btnCancel"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1">
            <Button
                    android:text="Confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btnConfirm"
            />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>
    <Spinner
            android:layout_width="209dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/selectTransac"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintVertical_bias="0.595"
            android:entries="@array/college"/>
    <TextView
            android:text="What College are you in?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/selectTransac"
            app:layout_constraintBottom_toTopOf="@+id/spinner" app:layout_constraintVertical_bias="0.704"
            android:textSize="18sp" android:textColor="#000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>